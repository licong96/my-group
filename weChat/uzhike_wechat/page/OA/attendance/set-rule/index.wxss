
.container {
  padding-bottom: 150rpx;
}
.tips {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 60rpx;
}
.tips-text {
  color: #c1c1c1;
}
.font-24 {
  font-size: 24rpx;
}
.wenhao {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
  line-height: 28rpx;
  border-radius: 50%;
  background: #fb8037;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}
.item {
  padding: 0 24rpx;
  background: #fff;
}
.item-list {
  display: flex;
  align-items: center;
  height: 130rpx;
}
.tab-item {
  display: inline-block;
  margin-left: -1rpx;
  width: 124rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fb8037;
  border: 1rpx solid #fb8037;
}
.tab-item:first-child {
  border-radius: 6rpx 0 0 6rpx;
}
.tab-item:last-child {
  border-radius: 0 6rpx 6rpx 0;
}
.tab-item-active {
  background: #fb8037;
  color: #fff;
}
.list-text {
  color: #c1c1c1;
}
.icon-jiantou2 {
  transform: rotate(180deg);
  color: #d2d2d2;
  font-size: 40rpx;
}
.icon-tianjia {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  background: #00e567;
  color: #fff;
  border-radius: 50%;
  margin-right: 20rpx;
}
.icon-jianhao {
  color: #d2d2d2;
  font-size: 48rpx;
}
.sub-text {
  color: #c1c1c1;
}
.margin-top-20 {
  margin-top: 20rpx;
}
.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 106rpx;
  padding: 0 35rpx;
  background: #fff;
}
.footer text {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  color: #fff;
  border-radius: 6rpx;
}