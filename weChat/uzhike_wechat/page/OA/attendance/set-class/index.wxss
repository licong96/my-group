
.search {
  height: 98rpx;
  border-top: 1rpx solid #f2f2f2;
  background: #fff;
  padding: 0 24rpx;
}
.search-box {
  display: flex;
  align-items: center;
  margin-top: 18rpx;
  height: 60rpx;
  background: #f1f1f1;
}
.icon-sousuo {
  width: 58rpx;
  text-align: center;
  color: #d2d2d2;
  font-size: 28rpx;
}
.phcolor {
  font-size: 24rpx;
  color: #d2d2d2;
}

.create {
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  background: #fff;
}
.icon-tianjia {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  background: #00e567;
  color: #fff;
  border-radius: 50%;
  margin-right: 20rpx;
  font-size: 24rpx;
}

.item {
  padding: 0 24rpx;
  background: #fff;
}
.radio {
  display: flex;
  height: 100rpx;
  align-items: center;
}
.radio-text {
  margin-left: 10rpx;
  width: 120rpx;
}
.item-text {
  margin-left: 20rpx;
  flex: 1;
}
.icon-gengduo1 {
  color: #c1c1c1;
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 106rpx;
  padding: 0 35rpx;
  background: #fff;
}
.footer .text {
  flex: 1;
}
.footer .btn {
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  color: #fff;
  border-radius: 6rpx;
}