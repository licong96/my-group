
.container {
  margin-bottom: 150rpx;
}
.item {
  padding: 0 24rpx;
  background: #fff;
}
.item-list {
  display: flex;
  align-items: center;
  height: 100rpx;
}
.list-item {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 100rpx;
  background: #fff;
}
.item-title {
  flex: 1;
}
.sub-text {
  color: #a0a0a0;
}
.icon-jiantou2 {
  transform: rotate(180deg);
  color: #d2d2d2;
}
.reason {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx 24rpx;
}
textarea {
  width: 100%;
  height: 140rpx;
}
.phcolor {
  font-size: 24rpx;
  color: #a0a0a0;
}
.icon-xiangji {
  width: 120rpx;
  height: 120rpx;
  background: #f5f5f5;
  line-height: 120rpx;
  text-align: center;
  font-size: 80rpx;
  color: #d2d2d2;
}
.margin-top-20 {
  margin-top: 20rpx;
}
.section {
  /* height: 168rpx; */
  padding: 10rpx 24rpx;
  background: #fff;
}
.icon-tianjia {
  margin-top: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background: #d2d2d2;
  border-radius: 50%;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}
.transfer {
  display: flex;
  align-items: flex-start;
}
.avatar {
  margin-top: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.name {
  font-size: 18rpx;
  color: #a0a0a0;
  text-align: center;
}
.icon-xiaji {
  margin: 50rpx 20rpx;
  color: #d2d2d2;
  font-size: 24rpx;
}
.tip {
  width: 200rpx;
  height: 42rpx;
  line-height: 42rpx;
  margin: 20rpx auto;
  background: #fff;
  font-size: 18rpx;
  text-align: center;
  color: #fb8037;
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 106rpx;
  padding: 0 35rpx;
  background: #fff;
}
.footer text {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  color: #fff;
  border-radius: 6rpx;
}