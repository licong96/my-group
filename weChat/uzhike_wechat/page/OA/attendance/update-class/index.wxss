
.tips {
  height: 60rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #bfbfbf;
}
.fuhao {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  line-height: 28rpx;
  background: #fb8037;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 28rpx;
}

.item-list {
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}
.list-type {
  margin-left: 50rpx;
}

.setup {
  height: 160rpx;
  padding: 0 24rpx;
  background: #fff;
}
.type {
  display: flex;
  margin-top: 20rpx;
}
.type-list {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #bababa;
  font-size: 24rpx;
  text-align: center;
  margin-right: 30rpx;
  border-radius: 6rpx;
  color: #bababa;
}
.type-list-active {
  border: 1rpx solid #fb8037;
  color: #fb8037;
}
.item-title {
  flex: 1;
}
.sub-text {
  color: #c1c1c1;
}
.icon-jiantou2 {
  transform: rotate(180deg);
  color: #d2d2d2;
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 106rpx;
  padding: 0 35rpx;
  background: #fff;
}
.footer text {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  color: #fff;
  border-radius: 6rpx;
}