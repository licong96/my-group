/* pages/estate-dict/list/index.wxss */
page {
  height: 100%;
}
/*  搜索  */
.top {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1002;
  width: 100%;
  background-color: #fff;
}
.top__city {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.top__icon-city {
  font-size: 30rpx;
  color: #ff6714;
}
.top__city-name {
  display: inline-block;
  padding: 0 8rpx;
  max-width: 130rpx;
  font-size: 28rpx;
  color: #333;
}
.icon-arrow {
  display: inline-block;
  font-size: 24rpx;
  color: rgb(210,210,210);
  transform: rotate(-90deg);
}
.top__search {
  flex: 1;
  /* margin: 0 -10rpx; */
}

.bind-setting {
  position: relative;
  z-index: 3;
  margin-left: 10rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 8rpx;
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 列表  */
.list-wrap {
  position: absolute;
  top: 190rpx;
  bottom: 100rpx;
  left: 0;
  right: 0;
  z-index: 1;
}
.list-space {
  padding: 20rpx 0;
}
.list {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
}
.list + .list {
  border-top: 1rpx solid #e6e6e6;
}
.list__img {
  width: 250rpx;
  height: 188rpx;
}
.list__cont {
  flex: 1;
  position: relative;
  padding-left: 20rpx;
}
.list__name {
  font-size: 32rpx;
  color: #333;
}
.list__info {
  font-size: 28rpx;
  color: #999;
}
.list__info-text {
  display: block;
  margin-top: 8rpx;
}
.list__tag {
  display: inline-block;
  margin: 10rpx 10rpx 0 0;
  padding: 8rpx 10rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}
.list__tag--1 {
  color: rgb(14,172,231);
  background-color: rgba(12,189,255,0.3);
}
.list__tag--2 {
  color: rgb(243,71,105);
  background-color: rgba(251,101,130,0.3);
}
.list__tag--3 {
  color: rgb(237,192,33);
  background-color: rgba(252,204,32,0.3);
}
.list__tag--4 {
  color: rgb(36,187,138);
  background-color: rgba(57,218,166,0.3);
}
.icon-more {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 38rpx;
  color: rgb(210,210,210);
}
.icon-more::after {
  content: "";
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  left: -20rpx;
}


/* 底部添加按钮 */
.footer {
  position: absolute;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #e6e6e6;
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  color: #ff6714;
  background-color: #fff;
  text-align: center;
  line-height: 100rpx;
}
