.content {
  position: absolute;
  top: 0;
  bottom: 100rpx;
  width: 100%;
  font-size: 30rpx;
}

textarea {
  height: 120rpx;
  overflow-y: auto;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.scroll__space {
  padding: 0 25rpx;
  background-color: #fff;
}

picker {
  width: 100%;
}

.list {
  position: relative;
  width: 100%;
  min-height: 130rpx;
}

.list + .list {
  border-top: 1rpx solid rgb(230, 230, 230);
}

.list__content {
  flex: 1;
  min-height: 130rpx;
  display: flex;
  align-items: center;
}

.list__content input {
  padding-left: 68rpx;
  width: 100%;
  text-align: right;
}

.list__right {
  justify-content: space-between;
}

.list__text {
  width: 200rpx;
}

.list__estate {
  width: 100%;
  min-height: 130rpx;
  line-height: 130rpx;
  color: rgb(201, 201, 201);
  padding-left: 122rpx;
  text-align: right;
}

.list__desc {
  min-height: 130rpx;
  line-height: 130rpx;
  color: rgb(201, 201, 201);
  text-align: right;
  padding-right: 35rpx;
}
.selected{
  color: #333
}
.list__arrow {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #999;
  transform: rotate(180deg);
}

.radio-group {
  display: flex;
  align-items: center;
  justify-content: center;
}

.list__button {
  display: flex;
  align-items: center;
  justify-content: center;
}

.active {
  background-color: rgb(251, 128, 55);
  color: #fff;
}

.list__t20 {
  margin-top: 20rpx;
}

.list__m20 {
  padding: 20rpx 0;
}

.add {
  margin-right: 10rpx;
  color: rgb(251, 128, 55);
}

.add__member {
  font-size: 30rpx;
}

.footer {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 10rpx 36rpx;
  width: 100%;
  background-color: #fff;
}

.input {
  width: 100%;
  color: rgb(201, 201, 201);
}


.view-input {
  position: absolute;
  top: 0;
  height: 60rpx;
  line-height: 60rpx;
}

.imgList{
  display: flex;
  align-items: center;
  position: absolute;
  right: 0
}
.imgList__image image{
  width: 110rpx;
  height: 110rpx
}

.add__img {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgb(245, 245, 245);
  text-align: center;
  margin-left: 20rpx;
}

