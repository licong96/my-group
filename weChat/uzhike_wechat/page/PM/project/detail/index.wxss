/* pages/project/detail/index.wxss */

.project__detail {
  padding: 20rpx 23rpx;
  background-color: #fff;
}

.project__name {
  font-size: 36rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.message {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: rgb(193, 193, 193);
  margin: 10rpx 0;
}

.price {
  color: rgb(255, 103, 20);
}

.between {
  justify-content: space-between;
}

.project__type text {
  margin-right: 10rpx;
  font-size: 24rpx;
  padding: 7rpx 10rpx;
  border-radius: 6rpx;
}

.bg_0 {
  background: rgb(182, 235, 255);
  color: rgb(14, 172, 231);
}

.bg_1 {
  background: rgb(254, 208, 217);
  color: rgb(243, 71, 105);
}

.bg_2 {
  background: rgb(254, 240, 188);
  color: rgb(237, 192, 33);
}

.bg_3 {
  background: rgb(195, 244, 248);
  color: rgb(36, 187, 138);
}

.project {
  margin-top: 20rpx;
  background-color: #fff;
  margin-bottom: 90rpx;
}

.project__tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.project__msg {
  padding: 30rpx 23rpx;
}

.project__msg .message text {
  color: rgb(49, 49, 49);
}

.twoList {
  width: 350rpx;
}

.project__tab view {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  color: rgb(210, 210, 210);
}

.selected {
  display: inline-block;
  width: 160rpx;
  height: 8rpx;
  background-image: -webkit-linear-gradient(0deg, rgb(255, 189, 103) 0%, rgb(250, 119, 48) 99%);
  border-radius: 4rpx;
  position: absolute;
  bottom: 0;
  left: -15rpx;
}

.active {
  color: #000 !important;
}

.project__annex {
  padding: 0 23rpx;
}

.annex__list {
  padding: 30rpx 0;
}

.annex__msg {
  display: flex;
  justify-content: space-between;
  position: relative;
}

.icon-more {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 38rpx;
  color: rgb(210, 210, 210);
}

.icon-more::after {
  content: "";
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  left: -20rpx;
}

.developer {
  font-size: 24rpx;
  color: rgb(193, 193, 193);
  margin-top: 10rpx;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 10rpx 36rpx 0 36rpx;
  width: 100%;
  background-color: #fff;
}

.btn-default {
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #e6e6e6;
  border-radius: 8rpx;
}
