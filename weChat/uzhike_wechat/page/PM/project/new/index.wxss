.content {
  position: absolute;
  top: 0;
  bottom: 100rpx;
  width: 100%;
  font-size: 30rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #999;
}

textarea {
  height: 120rpx;
  overflow-y: auto;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.scroll__space {
  padding: 0 25rpx;
  background-color: #fff;
}

picker {
  width: 100%;
}

.list {
  position: relative;
  width: 100%;
  min-height: 130rpx;
}

.list + .list {
  border-top: 1rpx solid rgb(230, 230, 230);
}

.list__content {
  flex: 1;
  min-height: 130rpx;
  display: flex;
  align-items: center;
}

.list__content input {
  padding-left: 68rpx;
  width: 100%
}

.list__right {
  justify-content: space-between;
}

.list__text {
  width: 200rpx;
}

.list__estate {
  width: 100%;
  min-height: 130rpx;
  line-height: 130rpx;
  color: rgb(201, 201, 201);
  padding-left: 122rpx;
}

.list__desc {
  min-height: 130rpx;
  line-height: 130rpx;
  color: rgb(201, 201, 201);
  padding-left: 116rpx;
}

.list__arrow {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #999;
  transform: rotate(180deg);
}

.radio-group {
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio {
  width: 124rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border: 1rpx solid rgb(251, 128, 55);
  overflow: hidden;
  color: rgb(251, 128, 55);
  position: relative;
}

.radio:first-of-type {
  border-radius: 6rpx 0 0 6rpx;
}

.radio:last-of-type {
  border-radius: 0 6rpx 6rpx 0;
}


/* radio未选中时样式 */

radio .wx-radio-input {
  border: none;
  background: none;
  z-index: -1;
}

radio .wx-radio-input {
  margin-right: 15rpx;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: none;
  border-radius: 6rpx;
  box-sizing: border-box;
}

.list__button {
  display: flex;
  align-items: center;
  justify-content: center;
}

.active {
  background-color: rgb(251, 128, 55);
  color: #fff;
}

.list__t20 {
  margin-top: 20rpx;
}

.list__content-sort {
  min-height: 130rpx;
}

.sort__content {
  display: flex;
  align-items: center;
}

.sort__content .checkbox__label {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 148rpx;
  height: 50rpx;
  background-color: rgb(245, 245, 245);
  color: rgb(193, 193, 193);
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.list__m20 {
  padding: 20rpx 0;
}

.list__placeholder, .input__placeholder {
  color: rgb(201, 201, 201);
}

.list__textarea {
  height: 160rpx;
}

.list__add {
  width: 500rpx;
  height: 60rpx;
  background-color: #fff;
  margin: 20rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgb(251, 128, 55);
  border-radius: 8rpx;
}

.add {
  margin-right: 10rpx;
  color: rgb(251, 128, 55);
}

.add__member {
  font-size: 30rpx;
}

.footer {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 10rpx 36rpx;
  width: 100%;
  background-color: #fff;
}

.input {
  width: 100%;

}
