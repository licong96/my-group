page {
  font-size: 30rpx;
}

.head {
  height: 2rpx;
  box-shadow: 2rpx 5rpx 5rpx rgba(213, 213, 213, 0.3);
}

.top-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #e6e6e6;
  background-color: #fff;
}

.top-nav view {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  color: rgb(193, 193, 193);
}

.selected {
  display: inline-block;
  width: 160rpx;
  height: 8rpx;
  background-image: -webkit-linear-gradient(0deg, rgb(255, 189, 103) 0%, rgb(250, 119, 48) 99%);
  border-radius: 4rpx;
  position: absolute;
  bottom: 0;
  left: -15rpx;
}

.active {
  color: #000 !important;
}

.list-wrap {
  padding: 0 23rpx;
  background-color: #fff;
}

.top-list {
  min-height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.top-list +.top-list {
  border-top: 1rpx solid #e6e6e6;
}

.top-list> text {
  display: inline-block;
  width: 200rpx;
  color: rgb(22, 22, 22);
}

.top-list> input {
  width: 100%;
  text-align: right;
}

.placeholder {
  color: rgb(193, 193, 193);
}

.list-m20 {
  margin: 20rpx 0 100rpx 0;
}

.tianjia {
  color: rgb(219, 219, 219) !important;
  text-align: right;
}

.list__num {
  display: inline-block;
  height: 60rrpx;
  width: 200rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6rpx;
  background-color: rgb(245, 245, 245);
  color: rgb(193,193,193);
  vertical-align: middle;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 10rpx 36rpx;
  width: 100%;
  background-color: #fff;
  z-index: 666;
}

.shanchu1 {
  height: 130rpx;
  line-height: 130rpx;
  color: #707070 !important;
  text-align: right;
}
.nameRules{
  width: 100%;
  height: 130rpx;
  line-height: 130rpx
}
.picker{
  text-align: right
}
.building-section{
  width: 100%;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center
}
.building-section .picker{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgb(245,245,245);
  color: rgb(193,193,193);
  text-align: center;
  border-radius: 8rpx
}