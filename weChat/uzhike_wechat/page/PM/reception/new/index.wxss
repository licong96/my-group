.input-wrap {
  padding: 0 30rpx;
  background-color: #fff;
}
.input__list {
  display: flex;
  align-items: center;
  height: 100rpx;
}
.input__list + .input__list {
  border-top: 1rpx solid #e6e6e6;
}
.input__title {
  font-size: 30rpx;
  color: #333;
}
.input__content {
  flex: 1;
  text-align: right;
}
.input__picker {
  height: 100rpx;
  line-height: 100rpx;
}
.input__text {
  font-size: 30rpx;
  color: #c1c1c1;
}
.input__text.active {
  color: #333;
}
.input__arrow {
  display: inline-block;
  font-size: 30rpx;
  color: #c1c1c1;
  transform: rotate(180deg);
}

.main {
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  position: absolute;
  top: 320rpx;
  /* top: 220rpx; */
  right: 0;
  bottom: 120rpx;
  left: 0;
}
/* 已添加的随行人员容器 */
.personnel{
  padding: 0 30rpx;
  background-color: #fff;
}
.personnel__list {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e6e6e6;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}
.personnel__tel {
  padding-left: 30rpx;
}
.personnel__icon {
  margin-left: auto;
  font-size: 38rpx;
  color: #d2d2d2;
}

/* 添加随行人员 */
.accompany {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 100rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.accompany__icon {
  color: #c1c1c1;
}

/* 添加随行人员，输入框 */
.accompany-modal {
}
.modal__title {
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #161616;
  text-align: center;
}
.modal__content {
  padding: 10rpx 25rpx 30rpx 25rpx;
}
.modal__item {
  margin-top: 20rpx;
  border-radius: 6rpx;
  padding: 0 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f5f5f5;
  color: #c1c1c1;
}
.modal__picker {
  display: flex;
  align-items: center;
  color: #333;
}
.modal__arrow {
  margin-left: auto;
  color: #c1c1c1;
  transform: rotate(180deg);
}
.modal__input {
  height: 60rpx;
  color: #333;
}
.modal__operation {
  display: flex;
  border-top: 1rpx solid #e6e6e6;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.modal__btn {
  flex: 1;
  font-size: 30rpx;
  color: #161616;
}
.modal__btn + .modal__btn {
  border-left: 1rpx solid #e6e6e6;
  color: #ff6714;
}
.icon__arrow {
  display: inline-block;
  font-size: 30rpx;
  color: #d2d2d2;
  transform: rotate(180deg);
}

/* 底部按钮 */
.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  padding: 0 35rpx;
  background: #fff;
}
.btn-primery {
  width: 100%;
}