
.inform-list {
  position: absolute;
  /* top: 100rpx; */
  top: 0;
  right: 0;
  bottom: 100rpx;
  left: 0;
  border-bottom: 1rpx solid #e6e6e6;
}
.inform__space {
  padding: 20rpx 0;
}
.inform__item {
  overflow: hidden;
  position: relative;
  width: 100%;
  background-color: #fff;
}
.inform__item + .inform__item {
  border-top: 1rpx solid #e6e6e6;
}
.inform__content {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
  border-top: 1rpx solid rgb(245, 245, 245);
  padding-left: 26rpx;
  padding-right: 50rpx;
  width: 100%;
  background-color: #fff;
  transition: all .3s;
}
.inform__info {
  overflow: hidden;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20rpx 0 20rpx 12rpx;
}
.inform__top {
  display: flex;
  align-items: center;
}
.inform__left {
  flex: 1;
}
.inform__right {
  display: flex;
  align-items: center;
  border: 2rpx solid #fe6c1b;
  border-radius: 8rpx;
  color: #fe6c1b;
}
.inform__btn {
  display: inline-block;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.inform__btn.active {
  color: #fff;
  background-color: #fe6c1b;
}
.inform__name {
  font-size: 30rpx;
  color: #333;
}
.inform__tel {
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #333;
}
.inform__desc {
  padding-top: 10rpx;
  font-size: 24rpx;
  color: #c1c1c1;
}
.inform__text {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #333;
}
.inform__text-list {
  margin-right: 20rpx;
}

/* 底部操作按钮 */
.foot {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0 30rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.foot__btn-wrap {
  margin-left: auto;
}
.foot__btn {
  display: inline-block;
  margin-left: 20rpx;
  border-radius: 8rpx;
  width: 200rpx;
  height: 68rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 68rpx;
}
.foot__btn-remove {
  border: 2rpx solid #FA7730;
  color: #FA7730;
  box-shadow: -1px 1px 4px 0px rgba(255, 189, 103, .3), 1px 1px 4px 0 rgba(250, 119, 48, .3);
}
.foot__btn-confirm {
  background-color: #FA7730;
  background-image: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  box-shadow: -1px 1px 4px 0px rgba(255, 189, 103, .3), 1px 1px 4px 0 rgba(250, 119, 48, .3);
}