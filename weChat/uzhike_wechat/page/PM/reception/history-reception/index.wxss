.item {
  padding: 30rpx;
  background-color: #fff;
}
.item + .item {
  border-top: 1rpx solid #e6e6e6;
}
.item__top {
  display: flex;
  align-items: center;
}
.top__list {
  flex: 1;
}
.top__time {
  flex: 2;
}
.top__title {
  display: block;
  font-size: 24rpx;
  color: #c1c1c1;
}
.top__desc {
  display: block;
  padding-top: 10rpx;
  font-size: 30rpx;
  color: #333;
}
.accompany-add {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #010101;
}
.icon-tianjia {
  margin-right: 8rpx;
}
.accompany-list {
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #010101;
}
.accompany__sex {
  margin-right: 20rpx;
}
.personnel__icon {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #c1c1c1;
}

