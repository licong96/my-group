.modal__title {
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #161616;
  text-align: center;
}
.modal__content {
  padding: 10rpx 25rpx 30rpx 25rpx;
}
.modal__item {
  margin-top: 20rpx;
  border-radius: 6rpx;
  padding: 0 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f5f5f5;
  color: #c1c1c1;
}
.modal__picker {
  display: flex;
  align-items: center;
  color: #333;
}
.modal__arrow {
  margin-left: auto;
  color: #c1c1c1;
  transform: rotate(180deg);
}
.modal__input {
  height: 60rpx;
  color: #333;
}
.modal__operation {
  display: flex;
  border-top: 1rpx solid #e6e6e6;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.modal__btn {
  flex: 1;
  font-size: 30rpx;
  color: #161616;
}
.modal__btn + .modal__btn {
  border-left: 1rpx solid #e6e6e6;
  color: #ff6714;
}
.icon__arrow {
  display: inline-block;
  font-size: 30rpx;
  color: #d2d2d2;
  transform: rotate(180deg);
}
