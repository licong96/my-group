page {
  font-size: 30rpx;
}

.content {
  background-color: #fff;
}

.list {
  padding: 0 25rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.top {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 25rpx;
  background-color: #fff;
}

.list + .list {
  border-top: 1rpx solid #f5f5f5;
}

.list view {
  display: flex;
  align-items: center;
}

.warn {
  height: 55rpx;
  line-height: 55rpx;
  padding: 0 25rpx;
  font-size: 24rpx;
  color: rgb(193, 193, 193);
}

.guanbi {
  color: rgb(186, 186, 186);
}

.remind {
  color: rgb(255, 103, 20);
  font-size: 45rpx;
  margin-right: 20rpx;
}

.tianjia {
  margin-right: 20rpx;
  font-size: 48rpx;
}

.text {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  border-radius: 10rpx;
}

.bg1 {
  background-color: rgb(134, 227, 156);
}

.bg2 {
  background-color: rgb(252, 204, 32);
  font-size: 48rpx;
  margin-right: 20rpx;
}

.bg3 {
  background-color: rgb(255, 103, 20);
}
