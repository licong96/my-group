page {
  font-size: 30rpx;
}

.list {
  display: flex;
  align-items: center;
}

.new__name {
  height: 100rpx;
  padding: 0 25rpx;
  background-color: #fff;
  justify-content: space-between;
  margin-bottom: 22rpx;
}

.name {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  width: 60rpx;
  font-size: 36rpx;
  text-align: center;
  color: #fff;
  background-color: rgb(255, 103, 20);
  border-radius: 8rpx;
  margin-right: 30rpx;
}

.arrow_left {
  color: rgb(210, 210, 210);
}

.list view {
  display: flex;
  align-items: center;
}

.warn {
  height: 55rpx;
  line-height: 55rpx;
  padding: 0 25rpx;
  font-size: 24rpx;
  color: rgb(193, 193, 193);
}

.new__who {
  background-color: #fff;
  padding: 0 25rpx;
}

.tianjia {
  color: rgb(186, 186, 186);
  display: inline-block;
  height: 60rpx;
  width: 60rpx;
  line-height: 58rpx;
  text-align: center;
  border: 2rpx solid rgb(186, 186, 186);
  border-radius: 50%;
}
/* .iconfont{
  margin-right: 30rpx;
} */
.new__who-use {
  padding-top: 15rpx;
}

.who__list {
  display: inline-block;
  vertical-align: middle;
  padding: 15rpx;
}

.who__list image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.new_add {
  display: block;
  font-size: 18rpx;
  color: rgb(193, 193, 193);
  text-align: center;
}

.send__who {
  background: #fff;
  padding: 0 25rpx;
}

.add__list +.add__list {
  border-top: 1rpx solid #f5f5f5;
}

.touxiang {
  font-size: 60rpx;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 10rpx 36rpx;
  width: 100%;
  background-color: #fff;
}
