.select {
  position: absolute;
  top: 110rpx;
  bottom: 0;
  z-index: 1;
  border-top: 1rpx solid #e6e6e6;
  width: 100%;
}
.select-list + .select-list {
  border-top: 1rpx solid #e6e6e6;
}
.select-list {
  padding-left: 30rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.select-list__dep {
  color: #666;
}
.select-list__emp {
  padding-left: 20rpx;
  color: #333;
}
.loading {
  margin-top: 20rpx;
}

/* 搜索关键字 */
.hint {
  margin: 40rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #c1c1c1;
}