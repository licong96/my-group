
.container {
  display: flex;
  flex-direction: column;
  background: #fff;
}
.content {
  position: absolute;
  flex: 1;
  top: 0;
  bottom: 170rpx;
  background: #fff;
}
picker {
  flex: 1;
}
.picker {
  font-size: 30rpx;
}
.title {
  margin-left: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  font-weight: 700;
}
.input-item {
  position: relative;
  display: flex;
  align-items: center;
  margin: 0 26rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.input-title {
  width: 260rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
}
.star {
  position: absolute;
  display: inline-block;
  width: 20rpx;
  top: 30rpx;
  left: 0;
  color: #ff3c00;
}
input {
  flex: 1;
  font-size: 30rpx;
}
.phcolor {
  color: #dfdfdf;
}
.icon-jiantou2 {
  transform: rotate(180deg);
  color: #dfdfdf;
}
.upload {
  position: relative;
  display: flex;
  align-items: top;
  margin: 20rpx 26rpx;
  height: 286rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.pic-box {
  width: 140rpx;
  height: 188rpx;
  border: 1rpx solid #dfdfdf;
}
.pic-btn {
  width: 130rpx;
  height: 42rpx;
  line-height: 42rpx;
  margin-top: 16rpx;
  background: #ff6714;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  border-radius: 6rpx;
}

input.tel {
  flex: 3;
  width: 210rpx;
}
.line {
  display: inline-block;
  width: 30rpx;
  margin-left: 10rpx;
  color: #c1c1c1;
}
.v-number {
  flex: 2;
  /* margin-left: 20rpx; */
  font-size: 26rpx;
  color: #ff6714;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 170rpx;
  background: #fff;
}
.footer-text {
  width: 84%;
  height: 88rpx;
  line-height: 88rpx;
  position: absolute;
  left: 55rpx;
  bottom: 38rpx;
  background: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 5rpx 13rpx rgba(251, 130, 57, .5);
}