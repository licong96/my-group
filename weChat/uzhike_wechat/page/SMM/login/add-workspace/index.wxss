

.scroll-list {
  flex: 1;
  position: absolute;
  top: 0;
  bottom: 98rpx;
  /* background: #fff; */
}
.box-item {
  margin-bottom: 20rpx;
  background: #fff;
}
.title {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 24rpx;
  font-size: 30rpx;
  font-weight: 700;
}
.item {
  position: relative;
  display: flex;
  height: 130rpx;
  /* line-height: 130rpx; */
  align-items: center;
  margin: 0 24rpx;
  font-size: 24rpx;
}
checkbox .wx-checkbox-input {
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  border-color: #ff6714;
} 
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #ff6714;
  border: none;
} 
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 40rpx;
  height: 40rpx;
  background: #ff6714;
  color: #fff;
  border-radius: 50%;
  border: 10rpx solid #ff6714;
}
.checkbox {
  position: absolute;
  right: 0;
}
image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}
.footer {
  position: absolute;
  bottom: 0;
  width: 100%; 
  height: 98rpx;
  display: flex;
  align-items: center;
  background: #fff;
}
.footer-text {
  flex: 1; 
  margin: 0 35rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  color: #fff;
  border-radius: 6rpx;
}