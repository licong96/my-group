
.container {
  display: flex;
  flex-direction: column;
}
.scroll-list {
  flex: 1;
  position: absolute;
  top: 0;
  bottom: 98rpx;
  background: #fff;
}
.item {
  position: relative;
  height: 130rpx;
  line-height: 130rpx;
  margin: 0 24rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
checkbox .wx-checkbox-input {
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ff6714;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #ff6714;
  border: none;
}
 checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 40rpx;
  height: 40rpx;
  background: #ff6714;
  color: #fff;
  border-radius: 50%;
  border: 10rpx solid #ff6714; 
} 
.checkbox {
  position: absolute;
  right: 0;
}
.footer {
  display: flex;
  position: absolute;
  bottom: 0;
  border-top: 1rpx solid #f3f3f3;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #fff;
}
.footer-text {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #ff6714;
}
.navigator-hover {
  background: transparent;
}

