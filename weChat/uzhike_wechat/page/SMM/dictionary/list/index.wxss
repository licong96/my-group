
.header {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  margin-top: 2rpx; 
  background: #fff;
}
.input-search {
  display: flex;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 22rpx;
  background: #f1f1f1;
  border-radius: 6rpx;
}
input {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
}
.phcolor {
  color: #d2d2d2;
}
.icon-sousuo {
  width: 28rpx;
  height: 26rpx;
  margin: 0 18rpx;
  color: #d2d2d2;
}

.list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.list-title {
  display: flex;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
}
.scroll {
  flex: 1;
  position: absolute;
  top: 202rpx;
  bottom: 100rpx;
}
.th {
  font-size: 30rpx;
  text-align: center;
}
.th:first-child {
  flex-basis: 209rpx;
  border-top: 4rpx solid #ff6714;
  color: #ff6714;
}
.th:nth-child(2) {
  flex-basis: 208rpx;
  border-top: 4rpx solid #1671fd;
  color: #1671fd;
}
.th:nth-child(3) {
  flex-basis: 209rpx;
  border-top: 4rpx solid #fe495b;
  color: #fe495b
}
.th:last-child {
  flex-basis: 124rpx;
  border-top: 4rpx solid #c1c1c1;
  color: #c1c1c1;
}

.tr {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}
.tr:nth-child(odd) {
  background: #f8f8f8;
}
.tr:nth-child(even) {
  background: #fff;
}
.td {
  color: #6d6d6d;
  font-size: 24rpx;
  text-align: center;
}
.icon-gengduo {
  transform: rotate(90deg);
}

.footer {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
  background: #fff;
}
.new {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #ff6714;
} 