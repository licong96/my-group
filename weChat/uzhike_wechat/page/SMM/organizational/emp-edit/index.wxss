
.content {
  position: absolute;
  top: 0;
  bottom: 100rpx;
  width: 100%;
}
.list-wrap {
  margin: 20rpx 0;
  padding: 0 30rpx;
  background-color: #fff;
}
.list {
  display: flex;
  align-items: center;
  height: 130rpx;
}
.list + .list {
  border-top: 1rpx solid rgb(230,230,230);
}
.list__title {
  min-width: 240rpx;
  font-size: 32rpx;
  color: #333;
}
.list__content {
  flex: 1;
  height: 100%;
}
.list__content-text {
  line-height: 130rpx;
  font-size: 32rpx;
  color: #333;
}
.list__input {
  min-height: 130rpx;
  /* font-size: 16px; */
}
.list__arrow {
  color: #999;
  transform: rotate(180deg);
}
.list__unit {
  font-size: 32rpx;
  color: #333;
}
.list__switch {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.list__picker {
  line-height: 130rpx;
}
.list-auto {
  height: auto;
  padding: 10rpx 30rpx 10rpx 0;
  min-height: 130rpx;
}
.list__textarea {
  padding: 10rpx;
  width: 100%;
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  letter-spacing: 1px;
}
.footer {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 10rpx 36rpx;
  width: 100%;
  background-color: #fff;
}
.person__pic {
  position: relative;
  height: 180rpx;
}
.person__pic-content {
  display: flex;
  align-items: center;
}
.person__img {
  border-radius: 50%;
  width: 140rpx; 
  height: 140rpx;   
}


.select {
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 800rpx;
  background-color: #fff;
}
.select-title {
  display: flex;
  align-items: center;
  height: 80rpx;
  text-align: center;
}
.select-title__text {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.select-title__text:nth-child(2) {
  flex: 1;
}
.select-nav {
  display:flex;
  align-items:center;
  border-top: 1rpx solid #e6e6e6;
  padding: 0 12rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.select-nav__list {
  display: inline-block;
  padding: 0 16rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}
.select-nav__list:last-child {
  color: #ff6714;
}
.select-nav__list--gray {
  font-size: 28rpx;
  color: #999;
}
.nav__iconfont:first-child {
  display: none;
  color: #999;
}
.select-content {
  border-top: 1rpx solid #e6e6e6;
  height: 640rpx;
}
.select-content__full {
  display: flex;
  flex-wrap: nowrap;
  width: 100%;
  height: 100%;
  transition: all .3s;
}
.select-content__scroll {
  width: 50%;
  flex: 0 0 50%;
}
.select-content__scroll + .select-content__scroll {
  border-left: 1rpx solid #e6e6e6;
}
.select-content__item {
  display: inline-block;
  border-bottom: 1rpx solid #e6e6e6;
  padding: 0 20rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #333;
}
.select__item--active {
  color: #ff6714;
}
.select-content__empty {
  font-size: 32rpx;
  color: #999;
  text-align: center;
}