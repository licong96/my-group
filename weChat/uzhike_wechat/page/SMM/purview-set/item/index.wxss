@import "../list/index.wxss";

.content__value-type {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.content__switch {
  margin-right: 30rpx;
  text-align: right;
}
.content__number-jia {
  width: 72rpx;
  height: 66rpx;
  font-size: 44rpx;
  color: rgb(201,201,201);
  background-color: rgb(245,245,245);
  text-align: center;
  line-height: 66rpx;
}
.content__number-input {
  padding: 0 12rpx;
  width: 72rpx;
  min-height: 66rpx;
  text-align: center;
}
.list__picker {
  display: block;
  margin-right: 10rpx;
  text-align: right;
}
.list__arrow {
  margin-right: 30rpx;
  color: #999;
  transform: rotate(180deg);
}
.footer {
  display: flex;
  align-items: center;
}
.footer__btn {
  display: inline-block;
  flex: 1;
  margin: 0;
  padding: 0;
  border: none;
  border-radius:0;
  box-shadow: none;
  height: 100%;
  width: 100%;
  line-height: 100rpx;
  color: #fff;
  font-size: 28rpx;
}
.footer__btn:nth-child(1) {
  background-color: #2196f3;
}
.footer__btn:nth-child(2) {
  background-color: #ff5722;
}
.footer__btn:nth-child(3) {
  background-color: #ffc107;
}