.article {
  padding: 26rpx;
  background-color: #fff;
}
.article__title {
  margin-top: 10rpx;
  font-size: 36rpx;
  color: #222;
  line-height: 1.5;
}
.article__affil {
  /* display: flex; */
  margin-top: 40rpx;
}
.article__class {
  font-size: 30rpx;
  color: #ff6714;
}
.article__date {
  padding-left: 20rpx;
  font-size: 24rpx;
  color: #c1c1c1;
}
.article__content {
  padding: 30rpx 0;
}
.article__text {
  padding-top: 30rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}
.footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #e6e6e6;
  padding: 0 26rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.footer__read{
  font-size: 30rpx;
  color: #c1c1c1;
}
.footer__operation{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 100rpx;
}
.footer__btn {
  padding: 0 20rpx;
}
.footer__text {
  padding-left: 6rpx;
  font-size: 24rpx;
  color: #333;
}