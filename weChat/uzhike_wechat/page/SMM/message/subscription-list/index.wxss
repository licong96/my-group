
.subscription-wrap {
  padding: 0 24rpx;
  background-color: #fff;
}
.subscription__item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}
.subscription__item + .subscription__item {
  border-top: 1rpx solid #e6e6e6;
}
.subscription__left {
  overflow: hidden;
  border-radius: 50%;
  width: 88rpx;
  height: 88rpx;
}
.subscription__img {
  width: 100%;
  height: 100%;
}
.subscription__right {
  flex: 1;
  padding-left: 20rpx;
}
.subscription__top,
.subscription__content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.subscription__content {
  margin-top: 10rpx;
}
.subscription__title {
  font-size: 30rpx;
  color: #333;
}
.subscription__desc {
  display: block;
  width: 600rpx;
  font-size: 24rpx;
  color: #a0a0a0;
}
.subscription__time {
  font-size: 22rpx;
  color: #a0a0a0;
}