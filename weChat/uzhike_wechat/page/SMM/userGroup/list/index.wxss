
page {
  position: relative;
  height: 100%;
}
.content {
  overflow: hidden;
  position: absolute;
  top: 0;
  bottom: 100rpx;
  width: 100%;
}
.content__item {
  overflow: hidden;
  position: relative;
  padding-left: 30rpx;
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  background-color: #fff;
}
.content__item + .content__item {
  border-top: 1rpx solid #e6e6e6;
}
.content__item--void.content__item + .content__item--void.content__item {
  border-top: 1rpx solid #fff;
} 
.content__item--void {
  background-color: #e6e6e6;
}
.content__item--void .content__operation {
  color: #fff;
}
.content__text {
  position: relative;
  z-index: 2;
  transition: all .3s;
}
.content__operation { 
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 3;
  width: 130rpx;
  height: 100%;
  font-size: 42rpx;
  color: rgb(193,193,193);
}
.footer {
  border-top: 1rpx solid #e6e6e6;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.footer__new {
  flex: 1;
  font-size: 32rpx;
  color: #ff6714;
  text-align: center;
}