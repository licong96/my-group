/* pages/index/index.wxss */
page {
  background-color: #fa7730;
}
.home {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #fff;
}
.top {
  position: absolute;
  top: -150rpx;
  width: 100%;
  height: 300rpx;
  background: #fa7730;
  border-radius: 50% / 50%;
}
.main {
  padding-top: 120rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  width: 100%;
  min-height: 100%;
  background: #fff;
}
.main__list {
  position: relative;
  z-index: 1;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, .1);
  border: 1rpx solid #f5f5f5;
  border-radius: 8rpx;
  background: #fff;
}
.main__item {
  flex: 0 0 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 12rpx 4rpx;
  white-space: nowrap;
}
.min__icon {
  font-size: 40rpx;
  color: #fa7730;
}
.main__text {
  margin-top: 4rpx;
  font-size: 28rpx;
  color: #666;
}
.navigator-hover {
  background-color: transparent;
}