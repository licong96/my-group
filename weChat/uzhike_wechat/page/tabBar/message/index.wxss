
.message-wrap {
  padding: 0 24rpx;
  background-color: #fff;
}
.message__item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}
.message__item + .message__item {
  border-top: 1rpx solid #e6e6e6;
}
.message__left {
  overflow: hidden;
  border-radius: 50%;
  width: 88rpx;
  height: 88rpx;
}
.message__pic {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.message__pic.bg--orange {
  background-color: #fa7831;
}
.message__pic.bg--red {
  background-color: #fa4d31;
}
.message__icon {
  font-size: 40rpx;
  color: #fff;
}
.message__img {
  width: 100%;
  height: 100%;
}
.message__right {
  overflow: hidden;
  flex: 1;
  padding-left: 20rpx;
}
.message__top,
.message__content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.message__content {
  margin-top: 10rpx;
}
.message__title {
  font-size: 30rpx;
  color: #333;
}
.message__desc {
  padding-right: 20rpx;
  font-size: 24rpx;
  color: #a0a0a0;
}
.message__time {
  font-size: 22rpx;
  color: #a0a0a0;
}
.message__number {
  border-radius: 50%;
  padding: 4rpx 8rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: #fa4d31;
}