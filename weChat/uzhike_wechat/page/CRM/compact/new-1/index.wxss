
.content {
  padding-bottom: 100rpx;
  position: relative;
  z-index: 1;
}
.sub-title {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #c1c1c1;
}
.list-wrap {
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  background-color: #fff;
}
.list {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
}
.list + .list {
  border-top: 1rpx solid #e6e6e6;
}
.list__content {
  flex: 1;
  height: 130rpx;
}
.list__arrow {
  font-size: 30rpx;
  color: #d2d2d2
}
.picker__full {
  width: 100%;
}
.picker-wrap {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 130rpx;
  font-size: 30rpx;
  color: #333;
}
.picker__title {
  font-size: 30rpx;
  transition: transform .3s;
  transform-origin: left center;
}
.picker__desc {
  overflow: hidden;
  height: 0;
  font-size: 30rpx;
  transition: height .3s;
}
.picker-wrap.active .picker__title{
  transform: scale(.8);
  color: #c1c1c1;
}
.picker-wrap.active .picker__desc{
  height: 50rpx;
  line-height: 50rpx;
}
.title--required {
  position: relative;
}
.title--required::after {
  content: "*";
  padding-left: 8rpx;
  font-size: 40rpx;
  color: #ff6714;
}

/* 图片上传  */
.picture-wrap {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.picture__title {
  padding-top: 10rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #c1c1c1;
  background-color: #fff;
}
.picture {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 15rpx;
  background-color: #fff;
}
.picture__item {
  position: relative;
  flex: 0 0 33.33%;
  padding: 15rpx;
}
.picture__item.add .picture__space {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 212rpx;
  border: 1rpx dotted #e6e6e6;
}
.picture__icon-add {
  font-size: 40rpx;
  color: #e6e6e6;
}
.picture__img {
  width: 100%;
  height: 212rpx;
}
.picture__close {
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  background-color: #fa7a32;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
}
.picture__close::after {
  content: "";
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  left: -10rpx;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  padding: 10rpx 36rpx;
  width: 100%;
  background-color: #fff;
}