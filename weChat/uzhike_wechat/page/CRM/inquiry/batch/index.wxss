/* 添加随行人员，输入框 */
.all-modal__title {
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #161616;
  text-align: center;
}
.all-modal__content {
  padding: 10rpx 25rpx 30rpx 25rpx;
}
.all-modal__item {
  margin-top: 20rpx;
  border-radius: 6rpx;
  font-size: 30rpx;
  color: #333;
}
.all-modal__input {
  margin-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #f5f5f5;
}
.all-modal__operation {
  display: flex;
  border-top: 1rpx solid #e6e6e6;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.all-modal__btn {
  flex: 1;
  font-size: 30rpx;
  color: #161616;
}
.all-modal__btn + .all-modal__btn {
  border-left: 1rpx solid #e6e6e6;
  color: #ff6714;
}