
.item {
  padding: 0 24rpx;
  background: #fff;
}
.item-list {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  height: 130rpx;
}
.item-title {
  width: 260rpx;
  color: #1a1a1a;
}
.star {
  color: red;
}
picker {
  flex: 1;
}
.icon-jiantou2 {
  transform: rotate(180deg);
  color: #d2d2d2;
}
.reason {
  background: #fff;
  padding: 20rpx 24rpx;
}
textarea {
  width: 100%;
  height: 130rpx;
}
.phcolor {
  font-size: 24rpx;
  color: #a0a0a0;
}
.icon-xiangji {
  width: 120rpx;
  height: 120rpx;
  background: #f5f5f5;
  line-height: 120rpx;
  text-align: center;
  font-size: 80rpx;
  color: #d2d2d2;
}
.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 106rpx;
  padding: 0 35rpx;
  background: #fff;
}
.footer text {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFBD67 0%, #FA7730 100%);
  color: #fff;
  border-radius: 6rpx;
}