@import "../../style/btn.wxss";

.modal {
  /* display: none; */
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1001;
}
.modal-content {
  position: absolute;
  top: 26%;
  left: 50%;
  z-index: 2;
  border-radius: 8rpx;
  padding: 30rpx;
  width: 80%;
  background-color: #fff;
  transform: translateX(-50%);
}
.modal-bg {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
}
.modal__title {
  font-size: 36rpx;
  text-align: center;
}
.modal__close {
  position: absolute;
  z-index: 2;
}
.modal__input {
  margin-top: 40rpx;
  padding: 10rpx 30rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 16px;
}
.modal__btn {
  margin-top: 40rpx;
  margin-left: 100rpx;
  margin-right: 100rpx;
}