@import "../../font/iconfont.wxss";

.search {
  position: relative;
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.search__content {
  display: flex;
  align-items: center;
  border: 1rpx solid #f1f1f1; 
  border-radius: 8rpx;
  width: 100%;
  height: 100%;
  background-color: rgb(241,241,241);
}
.search__icon {
  width: 60rpx;
  font-size: 36rpx;
  color: #d2d2d2;
  text-align: center;
}
.search__input {
  flex: 1;
  min-height: 100%;
  color: #333;
  font-size: 24rpx;
}
.search__icon-close {
  position: relative;
  margin-right: 20rpx;
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background-color: #c1c1c1;
}
.search__icon-close::after {
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
}