@import "../../style/btn.wxss";
@import "../../font/iconfont.wxss";

.screen {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1004;
}

.screen__content {
  overflow: hidden;
  position: fixed;
  top: 189rpx;
  right: 0;
  z-index: 99;
  width: 100%;
  height: 650rpx;
  background-color: #fff;
}

.screen__bg-click {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
}

.backdrop {
  position: fixed;
  z-index: 1003;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
}

.screen__scroll {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 100rpx;
  width: 100%;
}

.screen__list {
  margin: 30rpx 23rpx;
}

.screen__list:not(:last-of-type) {
  border-bottom: 1rpx solid #e6e6e6;
}

.screen__list-title {
  padding-bottom: 12rpx;
  font-size: 30rpx;
  color: rgb(193, 193, 193);
}

.screen__list .radio-group {
  display: flex;
  flex-wrap: wrap;
}

.screen__list .radio {
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

.screen__footer {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 80rpx;
}

.screen__footer-btn {
  width: 50%;
  flex: 0 0 50%;
  font-size: 32rpx;
  color: #000;
  text-align: center;
  line-height: 80rpx;
  border-top: 1rpx solid #e6e6e6;
}

.screen__footer-btn:first-child {
  border-right: 1rpx solid #e6e6e6;
}

/* radio样式修改 */

radio {
  box-sizing: border-box;
  background: none;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

/* radio未选中时背景样式 */

radio .wx-radio-input {
  border: none;
  background: none;
  z-index: -1;
}

.radio {
  display: flex;
  height: 60rpx;
  width: 170rpx;
  align-items: center;
  justify-content: center;
  background-color: rgb(241, 241, 241);
  color: #000;
  margin-right: 10rpx;
  border-radius: 8rpx;
  position: relative;
}

/* 选中后的 背景样式  */

radio .wx-radio-input.wx-radio-input-checked {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: none;
}

.active {
  background-color: #ff6714;
  color: #fff;
}
