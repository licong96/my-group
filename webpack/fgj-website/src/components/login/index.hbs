<div class="login js_login">
    <input type="password" class="input-puppet" placeholder="这个隐藏的input为的是去掉浏览器默认填充" />
    <i class="close">
      <svg class="icon" aria-hidden="true"><use xlink:href="#icon-guanbi"></use></svg>
    </i>
    <div class="title js_login_tab">
      <span class="tab active">手机号快捷登陆</span>
      <span class="tab">账号密码登陆</span>
    </div>
    <div class="body js_login_body">
      <div class="alert alert-danger hide" role="alert"></div>
      <div class="iphone">
        <svg class="icon" aria-hidden="true"><use xlink:href="#icon-shouji"></use></svg>
        <input type="text" class="form-control js_quick_iphone" placeholder="请输入手机号" autocomplete="off">
      </div>
      <div class="code">
        <svg class="icon" aria-hidden="true"><use xlink:href="#icon-yanzhengma1"></use></svg>
        <input type="text" class="form-control js_quick_code" placeholder="请输入验证码" autocomplete="off">
        <button class="btn get-code ladda-button js_quick_get_code" data-style="zoom-in">获取验证码</button>
      </div>
      <button class="btn btn-login ladda-button js_quick_submit" data-style="zoom-in">立即登陆</button>
      <div class="third">
        <div class="list">
          <svg class="icon" aria-hidden="true"><use xlink:href="#icon-weixin1"></use></svg>
          <span class="text">微信登陆</span>
        </div>
      </div>
    </div>
    <div class="body js_login_body hide">
      <div class="alert alert-danger hide" role="alert"></div>
      <div class="iphone">
        <svg class="icon" aria-hidden="true"><use xlink:href="#icon-shouji"></use></svg>
        <input type="text" class="form-control js_account_iphone" placeholder="请输入手机号" autocomplete="off">
      </div>
      <div class="code">
        <svg class="icon" aria-hidden="true"><use xlink:href="#icon-mima"></use></svg>
        <input type="password" class="form-control js_account_password" placeholder="密码不能小于6位数" autocomplete="off">
      </div>
      <button class="btn btn-login ladda-button js_account_submit" data-style="zoom-in">立即登陆</button>
    </div>
  </div>